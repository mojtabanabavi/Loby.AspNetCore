<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<Company>$(Authors)</Company>
		<Authors>Mojtaba Nabavi</Authors>
		<Product>$(AssemblyName)</Product>
		<PackageId>$(AssemblyName)</PackageId>
		<Copyright>Copyright Â© Mojtaba Nabavi 2021</Copyright>
		<Description>This project is a free, useful and open-source library that includes some useful extension methods and tools. It's a part of Loby library that focuses on Asp.Net Core framework.</Description>

		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageLicenseExpression>MIT</PackageLicenseExpression>
		<RepositoryUrl>https://github.com/mojtabanabavi/Loby.AspNetCore</RepositoryUrl>
		<PackageProjectUrl>https://github.com/mojtabanabavi/Loby.AspNetCore</PackageProjectUrl>
		<PackageReleaseNotes>https://github.com/mojtabanabavi/loby/releases/tag/v0.1.0</PackageReleaseNotes>
		<PackageTags>loby csharp dotnet dotnetcore aspnetcore extensions mime-parser</PackageTags>

		<Version>0.1.0</Version>
		<FileVersion>0.1.0</FileVersion>
		<VersionPrefix>0.1.0</VersionPrefix>
		<AssemblyVersion>0.1.0</AssemblyVersion>

		<RepositoryType>git</RepositoryType>
		<NeutralLanguage>en</NeutralLanguage>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
		<TargetFrameworks>netcoreapp3.1;net5.0</TargetFrameworks>
	</PropertyGroup>

	<ItemGroup Condition=" '$(TargetFramework)' == 'netcoreapp3.1' or '$(TargetFramework)' == 'net5.0' ">
		<FrameworkReference Include="Microsoft.AspNetCore.App" />
	</ItemGroup>

	<ItemGroup>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>
</Project>